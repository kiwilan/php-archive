{
    "name": "kiwilan/php-archive",
    "version": "0.1.0",
    "description": "PHP package to read and extract from archives (.zip, .rar, .tar, .7z) or .pdf with p7zip binary, deisgned to works with eBooks (.epub, .cbz, .cbr, .cb7, .cbt).",
    "keywords": [
        "php",
        "archive",
        "zip",
        "rar",
        "tar",
        "pdf",
        "ebook",
        "epub",
        "cbz",
        "cbr",
        "cbt",
        "cb7",
        "7z",
        "7zip"
    ],
    "homepage": "https://github.com/kiwilan/php-archive",
    "license": "MIT",
    "authors": [
        {
            "name": "Ewilan Rivi√®re",
            "email": "ewilan.riviere@gmail.com",
            "role": "Developer"
        }
    ],
    "suggest": {
        "ext-imagick": "*"
    },
    "require": {
        "php": "^8.1",
        "smalot/pdfparser": "^2.4",
        "symfony/process": "^6.2"
    },
    "require-dev": {
        "laravel/pint": "^1.6",
        "pestphp/pest": "^2.0",
        "phpstan/phpstan": "^1.10",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Kiwilan\\Archive\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kiwilan\\Archive\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
